{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-prettier"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": [
      "warn",
      { "selector": "property", "format": ["snake_case", "camelCase", "PascalCase", "UPPER_CASE"] },
      { "selector": "variable", "format": ["snake_case", "camelCase", "PascalCase", "UPPER_CASE"] }
    ],
    "camelcase": "off",
    "no-unused-vars": "off",
    "no-useless-constructor": "off",
    "comma-dangle": [2, "always-multiline"]
  }
}
